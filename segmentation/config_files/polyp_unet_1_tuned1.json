{
    "name_Alex_copied_this_from": "fsl_brats_seg_exp2-7",
    "name": "polyp_unet_1_tuned1",
    "n_gpu": 2,

    "model": {
        "type": "Unet",
        "args": {
            "in_channel" : 3,
            "out_channel": 2
        }
    },
    "data_loader": {
        "type": "FasterGeneralDataLoader",
        "args":{
            "data_dir": "/export/scratch2/aleksand/dsl/FedML/fedml_experiments/distributed/asdgan/results/asdgan/test_200/polyp_resnet_9blocks_epoch200_experiment_1.h5",
            "batch_size": 32,
            "shuffle": true,
            "validation_split": 0.2,
            "num_workers": 8
        },
        "transforms": ["ToImage","RandomColorJitter","Resize", "RandomCrop", "RandomRotate","RandomFlip","ToTensor","Normalize"],
        "transforms_args": {
            "Resize": [286],
            "RandomCrop": [256],
            "RandomRotate": [45],
            "RandomFlip": [true, true],
            "Normalize": [[127.5],[127.5]]
        }
    },
    "test_data_loader": {
        "type": "FasterGeneralDataLoader",
        "args":{
            "data_dir": ["/export/scratch2/aleksand/data/Dataset221_polyp_h5_raw/test.h5",
                "/export/scratch2/aleksand/data/Dataset226_polyp_h5_raw/test.h5"],
            "batch_size": 1,
            "shuffle": false,
            "validation_split": [["test"],["test"]],
            "num_workers": 0
        },
        "transforms": ["ToImage","Padding","ExpCentralCrop2d", "ToTensor","Normalize"],
        "transforms_args": {
            "Padding": [256],
            "ExpCentralCrop2d": [256],
            "Normalize": [[127.5],[127.5]]
        }
    },
    "optimizer": {
        "type": "AdamW",
        "args":{
            "lr": 0.001
        }
    },
    "loss": ["cross_entropy_loss","tversky_loss"],
    "metric": ["dice"],
    "lr_scheduler": {
        "type": "CosineAnnealingLR",
        "args": {
            "T_max": 200,
            "eta_min": 0.0
        }
    },
    "trainer": {
        "type": "Trainer",
        "epochs": 200,

        "save_dir": "saved/",
        "save_period": 10,
        "verbosity": 2,

        "monitor": "max val_dice",
        "early_stop": 200,

        "tensorboard": true,
        "vis": false
    }
}
